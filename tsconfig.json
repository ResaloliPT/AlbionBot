{
  "compilerOptions": {
    "experimentalDecorators": true,
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    // "lib": [],                             /* Specify library files to be included in the compilation. */
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types",
      "./node_modules/discord.js/typings"
    ],
    "baseUrl": "."
  }
}
